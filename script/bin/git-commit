#!/usr/bin/env bash

set -o errexit
set -o errtrace
set -o nounset
set -o pipefail

warn () {
    if (( $# > 0 )); then
        echo "${@}" 1>&2
    fi
}

die () {
    warn "${@}"
    exit 1
}

notify () {
    local code=$?
    warn "✗ [FATAL] $(caller): ${BASH_COMMAND} (${code})"
}

trap notify ERR

display_help () {
    cat << EOF
Synopsis:
    ${0##*/} [OPTION]...

Options:
    --amend
        amend last commit (default: ${AMEND})
    -m, --message MESSAGE
        commit message (default: ${MESSAGE})
    --push
        push to remote (default: ${PUSH})
    --root-commit
        force root commit (default: ${ROOT_COMMIT})
    -h, --help
        show this help message and exit
    -v, --version
        output version information and exit
EOF
}

AMEND=false
MESSAGE='This is where it all begins...'
PUSH=false
ROOT_COMMIT=false

while (( $# > 0 )); do
    case ${1} in
    --amend)
        AMEND=true
        shift
        ;;
    -m | --message)
        MESSAGE=${2?✗ argument parsing failed: missing value for option ‘-m | --message’}
        shift 2
        ;;
    --push)
        PUSH=true
        shift
        ;;
    --root-commit)
        ROOT_COMMIT=true
        shift
        ;;
    -h | --help)
        display_help
        shift
        exit
        ;;
    -v | --version)
        echo v0.1.0
        shift
        exit
        ;;
    --)
        shift
        break
        ;;
    *)
        break
        ;;
    esac
done

if (( $# > 0 )); then
    die "✗ argument parsing failed: unrecognizable argument ‘${1}’"
fi

clean_up () {
    git gc --aggressive --prune
    if [[ "${PUSH}" = true ]]; then
        if [[ "${ROOT_COMMIT}" = true ]]; then
            git push --force --set-upstream origin "$(git branch --show-current)"
        else
            git push --set-upstream origin "$(git branch --show-current)"
        fi
    fi
}

trap clean_up EXIT

if [[ "${ROOT_COMMIT}" = true ]]; then
    url=$(git remote get-url origin)
    rm --force --recursive .git
    git init
    git remote add origin "${url}"
    git add --all
fi

GIT_AUTHOR_DATE=$(date --utc --iso-8601=s)
export GIT_AUTHOR_DATE
export GIT_COMMITTER_DATE=${GIT_AUTHOR_DATE}
export TZ=UTC

if [[ "${AMEND}" = true ]]; then
    git commit --amend --message "${MESSAGE}" --reset-author
else
    git commit --message "${MESSAGE}"
fi
