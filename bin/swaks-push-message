#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

trap 'echo ✗ fatal error: errexit trapped with status $? 1>&2' ERR

# shellcheck disable=SC1090
source "$(git -C "$(dirname "$(realpath "${0}")")" rev-parse --show-toplevel)/.privacy/smtp.cfg"

while (( $# > 0 )); do
    case ${1} in
    -h | --help)
        cat << EOF
Usage:
    ${0##*/} [OPTION]... COMMAND...

Optional arguments:
    -h, --help
        show this help message and exit
    -v, --version
        output version information and exit

Positional arguments:
    COMMAND
        command to be executed within command substitution
EOF
        shift
        exit
        ;;
    -v | --version)
        echo v0.1.0
        shift
        exit
        ;;
    --)
        shift
        break
        ;;
    *)
        break
        ;;
    esac
done

if (( $# == 0 )); then
    echo "✗ argument parsing failed: missing positional argument ‘COMMAND’" 1>&2
    exit 1
fi

# Swiss Army Knife SMTP

swaks \
    --auth 'DIGEST-MD5,CRAM-MD5,PLAIN' \
    --auth-password "${AUTH_PASSWORD}" \
    --auth-user "${AUTH_USER}" \
    --body - \
    --ehlo 'Electronic-Frontier-Foundation' \
    --from "${FROM}" \
    --header "Date: $(date -u --rfc-email)" \
    --header "Message-Id: <$(sha256sum <(date -u --rfc-3339=ns) | awk '{ print $1 }')@swaks>" \
    --header 'Content-Transfer-Encoding: quoted-printable' \
    --header 'Content-Type: text/plain; charset=utf-8' \
    --header 'Subject: Sealed With A Kiss' \
    --header 'X-Mailer: Swiss Army Knife SMTP' \
    --hide-all \
    --port 587 \
    --protocol ESMTPS \
    --server "${SERVER}" \
    --tls-protocol tlsv1_2 \
    --tls-verify \
    --to "${TO}" \
    -tls \
    <<< "$("$@")$(date -u '+%n%n%F %T %z')"
    #--quit-after RCPT \
