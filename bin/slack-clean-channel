#!/bin/bash

# shellcheck disable=SC1090
source "$(dirname "$(dirname "$(realpath "${0}")")")/.privacy/slack.cfg"

export past=${past:=86400}

list=$(curl --silent --show-error --request GET \
    --header 'Authorization: Bearer '"${TOKEN}" \
    --get \
    --data 'channel='"${CHANNEL}" \
    --data 'count=100' \
    --data 'inclusive=true' \
    --data 'oldest=0.000001' \
    'https://slack.com/api/channels.history' \
    | python3 -c '
import json
import os
import sys
import time

response = json.load(sys.stdin)

if response["ok"]:
    for message in response["messages"]:
        if message["ts"] < str(time.time() - int(os.environ["past"])):
            print(message["ts"])
    ' \
    | tac)

if [ -z "${list}" ]; then
    echo "ok: nil"
    exit
fi

for i in ${list}; do

    curl --silent --show-error --request DELETE \
        --header 'Authorization: Bearer '"${TOKEN}" \
        --data 'channel='"${CHANNEL}" \
        --data 'ts='"${i}" \
        'https://slack.com/api/chat.delete' \
        | python3 -c '
import json
import sys

response = json.load(sys.stdin)

print(response["ok"])
        '

done
