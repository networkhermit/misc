#!/bin/bash

# shellcheck disable=SC1090
source "$(dirname "$(dirname "$(realpath "${0}")")")/.privacy/slack.cfg"

export MESSAGE_RETENTION=${MESSAGE_RETENTION:=86400}

list=$(curl --fail --location --silent --show-error --request GET \
    --header "Authorization: Bearer ${TOKEN}" \
    --get \
    --data "channel=${GROUP}" \
    --data 'inclusive=true' \
    --data 'limit=100' \
    --data 'oldest=0' \
    'https://slack.com/api/conversations.history' \
    | python3 -c '
import json
import os
import sys
import time

response = json.load(sys.stdin)

if response["ok"]:
    for message in response["messages"]:
        if message["ts"] < str(time.time() - int(os.environ["MESSAGE_RETENTION"])):
            print(message["ts"])
    ' \
    | tac)

if [ -z "${list}" ]; then
    echo "ok: nil"
    exit
fi

for i in ${list}; do

    curl --fail --location --silent --show-error --request DELETE \
        --header "Authorization: Bearer ${TOKEN}" \
        --data "channel=${GROUP}" \
        --data "ts=${i}" \
        'https://slack.com/api/chat.delete' \
        | python3 -c '
import json
import sys

response = json.load(sys.stdin)

print(response["ok"])
        '

done
