#!/bin/bash

# shellcheck disable=SC1090
source "$(dirname "$(dirname "$(realpath "${0}")")")/.privacy/slack.cfg"

export past=${past:=86400}

list=$(curl -sS -X GET \
    -H 'Authorization: Bearer '"${TOKEN}" \
    -G \
    -d 'channel='"${GROUP}" \
    -d 'count=100' \
    -d 'inclusive=true' \
    -d 'oldest=0.000001' \
    'https://slack.com/api/groups.history' \
    | python3 -c '
import json
import os
import sys
import time

response = json.load(sys.stdin)

if response["ok"]:
    for message in response["messages"]:
        if message["ts"] < str(time.time() - int(os.environ["past"])):
            print(message["ts"])
    ' \
    | tac)

if [ -z "${list}" ]; then
    echo "ok: nil"
    exit
fi

for i in ${list}; do

    curl -sS -X DELETE \
        -H 'Authorization: Bearer '"${TOKEN}" \
        -d 'channel='"${GROUP}" \
        -d 'ts='"${i}" \
        'https://slack.com/api/chat.delete' \
        | python3 -c '
import json
import sys

response = json.load(sys.stdin)

print(response["ok"])
        '

done
