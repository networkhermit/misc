#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

trap 'echo âœ— fatal error: errexit trapped with status $? 1>&2' ERR

while (( $# > 0 )); do
    case "${1}" in
        -h | --help)
            cat << EOF
Usage:
    ${0##*/} [OPTION]... FILE...

Optional arguments:
    -h, --help
        show this help message and exit
    -v, --version
        output version information and exit

Positional arguments:
    FILE
        markdown file to be analyzed
EOF
            shift
            exit
            ;;
        -v | --version)
            echo v0.1.0
            shift
            exit
            ;;
        --)
            shift
            break
            ;;
        *)
            break
            ;;
    esac
done

for i in "$@"; do
    awk '
    BEGIN {
        matched = 0
    }

    {
        if ($0 ~ "^```bash$") {
            matched = 1
        } else if ($0 ~ "^```$") {
            matched = 0
        } else if (matched) {
            print $0
        }
    }
    ' "${i}" \
        | shellcheck -
done
