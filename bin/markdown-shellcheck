#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

for i in "$@"; do
    awk '
    BEGIN {
        matched = 0
    }

    {
        if ($0 ~ "^```bash$") {
            matched = 1
        } else if ($0 ~ "^```$") {
            matched = 0
        } else if (matched) {
            print $0
        }
    }
    ' "${i}" \
        | shellcheck -
done
