#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

trap 'echo âœ— fatal error: errexit trapped with status $? 1>&2' ERR

while (( $# > 0 )); do
    case "${1}" in
        -h | --help)
            cat << EOF
Usage:
    ${0##*/} [OPTION]... DOMAIN...

Optional arguments:
    -h, --help
        show this help message and exit
    -v, --version
        output version information and exit

Positional arguments:
    DOMAIN
        domain name to be queried
EOF
            shift
            exit
            ;;
        -v | --version)
            echo v0.1.0
            shift
            exit
            ;;
        --)
            shift
            break
            ;;
        *)
            break
            ;;
    esac
done

for i in "$@"; do
    printf '\n%s\n\n' "${i}"

    dig +nssearch "${i}" | awk '{ print $2, $4 }'
done
