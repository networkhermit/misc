#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

trap 'echo ✗ fatal error: errexit trapped with status $? 1>&2' ERR

# shellcheck disable=SC1090
source "$(git rev-parse --show-toplevel)/.privacy/zulip.cfg"

: "${MESSAGE_RETENTION:=86400}"

while (( $# > 0 )); do
    case ${1} in
    -h | --help)
        cat << EOF
Usage:
    ${0##*/} [OPTION]...

Optional arguments:
    -h, --help
        show this help message and exit
    -v, --version
        output version information and exit
EOF
        shift
        exit
        ;;
    -v | --version)
        echo v0.1.0
        shift
        exit
        ;;
    --)
        shift
        break
        ;;
    *)
        break
        ;;
    esac
done

export MESSAGE_RETENTION

if (( $# > 0 )); then
    echo "✗ argument parsing failed: unrecognizable argument ‘${1}’" 1>&2
    exit 1
fi

list=$(curl --fail --location --silent --show-error --request GET \
    --get \
    --data 'anchor=0' \
    --data 'num_after=100' \
    --data 'num_before=0' \
    --user "${BOT_EMAIL_ADDRESS}:${BOT_API_KEY}" \
    "https://${ORGANIZATION}.zulipchat.com/json/messages" \
    | python3 -c '
import json
import os
import sys
import time

response = json.load(sys.stdin)

if response["result"] == "success":
    for message in response["messages"]:
        if message["timestamp"] < time.time() - int(os.environ["MESSAGE_RETENTION"]):
            print(message["id"])
    ')

if [ -z "${list}" ]; then
    echo 'ok: nil'
    exit
fi

for i in ${list}; do

    curl --fail --location --silent --show-error --request DELETE \
        --user "${ADMIN_EMAIL_ADDRESS}:${ADMIN_API_KEY}" \
        "https://${ORGANIZATION}.zulipchat.com/api/v1/messages/${i}" \
        | python3 -c '
import json
import sys

response = json.load(sys.stdin)

print(response["result"])
        '

done
