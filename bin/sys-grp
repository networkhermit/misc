#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

printf '\n%s\n\n' "[ Group ]"

sort \
    --field-separator : \
    --key 3,3n \
    --stable \
    /etc/group \
    | cut \
    --complement \
    --delimiter : \
    --field 2 \
    | column \
    --separator : \
    --table \
    --table-columns 'GROUP_NAME,GID,USER_LIST'

printf '\n%s\n\n' "[ User ]"

sort \
    --field-separator : \
    --key 3,3n \
    --stable \
    /etc/passwd \
    | cut \
    --complement \
    --delimiter : \
    --field 2 \
    | column \
    --separator : \
    --table \
    --table-columns 'LOGIN_NAME,UID,GID,COMMENT,HOME,SHELL'
