#!/bin/bash

if (( EUID != 0 )); then
    echo "✗ This script must be run as root" 1>&2
    exit 1
fi

if [ "${OSTYPE}" != 'linux-gnu' ]; then
    echo "✗ unknown os type: ‘${OSTYPE}’" 1>&2
    exit 1
fi

DISTRO=$(awk --field-separator '=' '/^ID=/ { print $2; exit }' /etc/os-release)

case "${DISTRO}" in
    arch)
        ;;
    fedora)
        ;;
    kali | ubuntu)
        echo '------ [ package ] ------'
        apt list 2> /dev/null | grep --word-regexp '\(local\|residual-config\)]' | column -t
        echo '------ [ configuration ] ------'
        find /etc -type f \( -iregex '.*\.dpkg-\(dist\|new\|old\)' -o -iregex '.*\.ucf-\(dist\|new\|old\)' \) -print0 | sort --zero-terminated
        dpkg-query --show --showformat '${Package}\n${Conffiles}\n' | awk '/^[^ ]/{pkg=$1}/ obsolete$/{print pkg,$0}' | column -t
        ;;
    *)
        echo "✗ unknown distro: ‘${DISTRO}’" 1>&2
        exit 1
        ;;
esac
