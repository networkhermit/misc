#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

trap 'echo ✗ fatal error: errexit trapped with status $? 1>&2' ERR

if (( EUID != 0 )); then
    echo '✗ This script must be run as root' 1>&2
    exit 1
fi

FORCE_SYNC=false

while (( $# > 0 )); do
    case "${1}" in
        -f | --force)
            FORCE_SYNC=true
            shift
            ;;
        -h | --help)
            cat << EOF
Usage:
    ${0##*/} [OPTION]...

Optional arguments:
    -f, --force
        force synchronization of package metadata (default: false)
    -h, --help
        show this help message and exit
    -v, --version
        output version information and exit
EOF
            shift
            exit
            ;;
        -v | --version)
            echo v0.1.0
            shift
            exit
            ;;
        --)
            shift
            break
            ;;
        *)
            break
            ;;
    esac
done

if (( $# > 0 )); then
    echo "✗ argument parsing failed: unrecognizable argument ‘${1}’" 1>&2
    exit 1
fi

if [ "${OSTYPE}" != linux-gnu ]; then
    echo "✗ unknown os type: ‘${OSTYPE}’" 1>&2
    exit 1
fi

# shellcheck disable=SC1090
source <(grep '^ID=' /etc/os-release)
DISTRO=${ID:-linux}

case "${DISTRO}" in
    arch | manjaro)
        if [ "${FORCE_SYNC}" = true ]; then
            (yes || true) | pacman --sync --clean --clean
        fi
        pacman --sync --refresh --sysupgrade
        (yes || true) | pacman --sync --clean --clean
        ;;
    fedora)
        if [ "${FORCE_SYNC}" = true ]; then
            dnf clean all
        fi
        dnf makecache
        dnf check-update --changelogs || true
        dnf upgrade
        dnf autoremove
        dnf clean packages
        ;;
    kali | ubuntu)
        if [ "${FORCE_SYNC}" = true ]; then
            apt clean
        fi
        apt update
        apt full-upgrade --purge
        apt clean
        apt autoremove --purge
        ;;
    opensuse*)
        if [ "${FORCE_SYNC}" = true ]; then
            zypper clean --all
        fi
        zypper refresh
        zypper dist-upgrade
        zypper purge-kernels
        zypper clean
        ;;
    *)
        echo "✗ unknown distro: ‘${DISTRO}’" 1>&2
        exit 1
        ;;
esac
