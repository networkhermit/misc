#!/bin/bash

if (( EUID != 0 )); then
    echo "âœ— This script must be run as root" 1>&2
    exit 1
fi

docker image ls --filter reference='*:latest' --filter reference='*/*:latest' --filter reference='*/*/*:latest' --format '{{.Repository}}' | xargs --max-args 1 docker pull

docker image prune --force
docker image ls --all
