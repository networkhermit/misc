{
  "auto_update": false,
  "buffer_font_family": "Go Mono",
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_size": 16,
  "enable_language_server": false,
  "features": {
    "copilot": false
  },
  "languages": {
    "Go": {
      "enable_language_server": true,
      "formatter": {
        "external": {
          "arguments": [
            "-s"
          ],
          "command": "gofmt"
        }
      }
    },
    "JSON": {
      "enable_language_server": true
    },
    "Python": {
      "enable_language_server": true,
      "formatter": {
        "external": {
          "arguments": [
            "--quiet",
            "-"
          ],
          "command": "black"
        }
      }
    },
    "Rust": {
      "enable_language_server": true
    },
    "TOML": {
      "enable_language_server": true
    },
    "Terraform": {
      "enable_language_server": true
    },
    "YAML": {
      "enable_language_server": true
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "imports": {
          "granularity": {
            "enforce": true
          }
        }
      }
    }
  },
  "restore_on_startup": "none",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_family": "SF Mono",
    "font_size": 12,
    "line_height": "standard",
    "option_as_meta": true
  },
  "theme": "Ros√© Pine Dawn",
  "vim": {
    "use_system_clipboard": "never"
  },
  "vim_mode": true
}
