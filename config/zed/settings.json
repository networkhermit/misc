{
  "auto_update": false,
  "buffer_font_family": "Go Mono",
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_size": 16,
  "enable_language_server": false,
  "features": {
    "copilot": false
  },
  "languages": {
    "Go": {
      "enable_language_server": true,
      "formatter": [
        {
          "external": {
            "command": "goimports"
          }
        },
        {
          "external": {
            "arguments": [
              "-s"
            ],
            "command": "gofmt"
          }
        }
      ]
    },
    "JSON": {
      "enable_language_server": true
    },
    "JavaScript": {
      "enable_language_server": true,
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.biome": true,
            "source.organizeImports.biome": true
          }
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ],
      "language_servers": [
        "biome",
        "vtsls"
      ]
    },
    "Nix": {
      "enable_language_server": true,
      "language_servers": [
        "nixd"
      ]
    },
    "Python": {
      "enable_language_server": true,
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        },
        {
          "external": {
            "arguments": [
              "--quiet",
              "-"
            ],
            "command": "black"
          }
        }
      ],
      "language_servers": [
        "ruff",
        "pyright"
      ]
    },
    "Rust": {
      "enable_language_server": true
    },
    "TOML": {
      "enable_language_server": true
    },
    "Terraform": {
      "enable_language_server": true
    },
    "TypeScript": {
      "enable_language_server": true,
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.biome": true,
            "source.organizeImports.biome": true
          }
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ],
      "language_servers": [
        "biome",
        "vtsls"
      ]
    },
    "YAML": {
      "enable_language_server": true
    }
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "imports": {
          "granularity": {
            "enforce": true
          }
        }
      }
    }
  },
  "restore_on_startup": "none",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_family": "SF Mono",
    "font_size": 12,
    "line_height": "standard",
    "option_as_meta": true
  },
  "theme": "Ros√© Pine Dawn",
  "vim": {
    "use_system_clipboard": "never"
  },
  "vim_mode": true
}
